@model DataAccess.Secretaria

@{
    ViewData["Title"] = "Editar Secretaria";
}

<h1>Secretaria</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdSecretaria" />
            <div class="form-row">
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Nombres" class="control-label">Nombre</label>
                        <input asp-for="Nombres" class="form-control" />
                        <span asp-validation-for="Nombres" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Apellidos" class="control-label"></label>
                        <input asp-for="Apellidos" class="form-control" />
                        <span asp-validation-for="Apellidos" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Sexo" class="control-label"></label>
                        <input asp-for="Sexo" class="form-control" />
                        <span asp-validation-for="Sexo" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Telefono" class="control-label"></label>
                        <input asp-for="Telefono" class="form-control" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Celular" class="control-label"></label>
                        <input asp-for="Celular" class="form-control" />
                        <span asp-validation-for="Celular" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <label asp-for="IdusuarioNavigation.NombreDeUsuario" class="control-label">Nombre de Usuario</label>
                    <select asp-for="IdusuarioNavigation.NombreDeUsuario" class="form-control" asp-items="ViewBag.Idusuario"></select>
                </div>
            </div>
            <div class="form-row">
                <div class="col-4">
                    <label asp-for="IdCargo" class="control-label">Tipo de Usuario</label>
                    <select asp-for="IdCargo" class="form-control" asp-items="ViewBag.IdCargo"></select>

                </div>
                
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

