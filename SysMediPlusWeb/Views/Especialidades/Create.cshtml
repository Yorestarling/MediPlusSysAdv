@model DataAccess.Especialidade

@{
    ViewData["Title"] = "Nuevas Especialidades";
}

<h1>Nuevas Especialidades</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreEspecialidad" class="control-label">Nombre de la Especialidad</label>
                <input asp-for="NombreEspecialidad" class="form-control" />
                <span asp-validation-for="NombreEspecialidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
