@model IEnumerable<DataAccess.Doctore>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex align-items-center">
    <div class="flex-grow-1">
        <h1></h1>
    </div>
    <div>
        <a href="@Url.Action("Create")" class="btn btn-primary ">Nuevo Doctor</a>
    </div>
</div>

<div>
    <form method="get">

        <input name="buscar" value="@ViewData["buscar"]" />
        <button class="btn btn-dark" type="submit">BUSCAR</button>

    </form>
    <h9>Buscar por Nombre o Apellido</h9>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sexo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Celular)
            </th>
           
            <th>
               Especialidad
            </th>
            <th>
                Dia De labor
            </th>          
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sexo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Celular)
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.IdEspecialidadNavigation.NombreEspecialidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IddiaNavigation.NombreDia)
                </td>             
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdDoctor">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdDoctor">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdDoctor">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
