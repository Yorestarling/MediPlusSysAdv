@model DataAccess.Cita

@{
    ViewData["Title"] = "Detalle de la cita";
}

<h1>Detalle de la cita</h1>

<div>
    <h4>Cita</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Fecha de la Cita
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaCita)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tanda)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tanda)
        </dd>
        <dt class="col-sm-2">
            Hora de inicio de la cita
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoraInicio)
        </dd>
        <dt class="col-sm-2">
            Fecha Fin de la cita
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoraFin)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comentario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comentario)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Motivo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Motivo)
        </dd>
        <dt class="col-sm-2">
            Doctor encargado de la cita
        </dt>
        <dd class="col-sm-10">
            @($"{Model.IdDoctorNavigation.Nombres} {Model.IdDoctorNavigation.Apellidos}")
        </dd>

        <dt class="col-sm-2">
            Paciente 
        </dt>
        <dd class="col-sm-10">
            @($"{Model.IdPacienteNavigation.Nombres} {Model.IdPacienteNavigation.Apellidos}")
        </dd>
        <dt class="col-sm-2">
            Estado Actual de la cita
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdEstadoNavigation.NombreEstado)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.IdCita">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
