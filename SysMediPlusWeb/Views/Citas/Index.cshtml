@model IEnumerable<DataAccess.Cita>

@{
    ViewData["Title"] = "Index";
}

<h1>Citas</h1>
<div class="d-flex align-items-center">
    <div class="flex-grow-1">
    </div>
    <div>
        <a href="@Url.Action("Create")" class="btn btn-primary ">Nueva Cita</a>
    </div>
    <div>
        <a asp-controller="HistorialdeCambios" asp-action="Index" class="btn btn-primary ">Historial de cambios</a>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Doctor
            </th>

            <th>
               Paciente
            </th>
            <th>
                Fecha de la Cita
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tanda)
            </th>
            <th>
               Hora de Inicio
            </th>
            <th>
                Hora de Fin
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comentario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Motivo)
            </th>
            <th>
               Estado Actual
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdPacienteNavigation.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdDoctorNavigation.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCita)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tanda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoraInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoraFin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comentario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Motivo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdEstadoNavigation.NombreEstado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdCita">Editar</a> 
                <a asp-action="Details" asp-route-id="@item.IdCita">Detalle</a> 
                
            </td>
        </tr>
        }
    </tbody>
</table>
